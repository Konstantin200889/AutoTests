<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.aeo.automation.dataFetching.services.DynAdminService" level="ERROR"/>
    <logger name="com.aeo.automation.dataFetching.apiUtils.DDFUtils" level="ERROR"/>
    <logger name="com.aeo.automation.dataFetching.services.SterlingFilteringQELookupProxy" level="ERROR"/>
    <logger name="org.apache.http.impl.execchain.RetryExec" level="ERROR"/>

    <logger name="io.qameta.allure.AllureLifecycle" level="OFF"/>
    <logger name="com.aeo.salad.cucumber.api.CucumberScenario" level="OFF"/>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>